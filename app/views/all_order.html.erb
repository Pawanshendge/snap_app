 <!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>

<h2>Order</h2>

<table>
  <tr>
    <th>id</th>
    <th>account </th>
    <th>sub_total</th>
    <th>amount</th>
    <th>no_of_pages</th>
    <th>book_size</th>
    <th>book_title</th>
    <th>book_color</th>
    <th>cover_type</th>
    <th>paper_type</th>
    <th>book_id</th>
    <th> status</th>
    <th>payment_status</th>

  </tr>
 <% if orders.present? %>
    <% orders.each do |order| %>
      <tr>
        


          <td><%= order&.id %></td>
          <td><%= order&.account&.id %></td>
          <td><%= order&.sub_total %></td>
          <td><%= order&.amount %></td>
          <td><%= order&.no_of_pages %></td>
          <td><%= order&.book_size %></td>
          <td><%= order&.book_title %></td>
          <td><%= order&.book_color %></td>
          <td><%= order&.cover_type %></td>
          <td><%= order&.paper_type %></td>
          <td><%= order&.book_id %></td>
          <td><%= order&.status %></td>
          <td><%= order&.payment_status %></td>
      </tr>
     <% end %>
  <% end %>

</table>

</body>
</html>
