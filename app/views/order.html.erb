<!DOCTYPE html>
<html>
  <head>
    <style>
      .page
        {
          width: 8in;
          height: 8in;
          display: flex;
          justify-content: center;
          align-items: center;
          page-break-after: always;
        }
        .page-caption{
          width: 8in;
          height: 8in;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          page-break-after: always;
        }
        .square-full
        {
          object-fit: cover;
          width: 100%;
          max-width: 8in;
          max-height: 8in;
          height: 100%;
        }
        .ss-div
        {
          width: 6.5in;
          height: 6.5in;
        }
        .square-smartscale
        {
          object-fit: cover;
          width: 100%;
          max-width: 6.5in;
          max-height: 6.5in;
          height: 100%;
        }
        .square-fit
        {
          object-fit: cover;
          width: auto;
          height: auto;
          max-width: 8in;
          max-height: 8in;
        }
        .sc-div
        {
          width: 6.5in;
          height: 6in;
        }
        .square-caption
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 6.5in;
          max-height: 6in;
        }
        .landscape-full
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 8in;
          max-height: 8in;
        }
        .ls-fit-div
        {
          width: 8in;
          height: 6in;
        }
        .landscape-fit-one
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 8in;
          max-height: 6in;
        }
        .landscape-fit-two
        {
          object-fit: cover;
          width: auto;
          height: auto;
          max-width: 8in;
          max-height: 8in;
        }
        .portrait-full
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 8in;
          max-height: 8in;
        }
        .ps-div
        {
          width: 6.5in;
          height: 6.5in;
        }
        .portrait-smartscale
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 6.5in;
          max-height: 6.5in;
        }
        .portrait-fit
        {
          object-fit: cover;
          width: auto;
          height: auto;
          max-width: 8in;
          max-height: 8in;
        }
        .pc-div
        {
          width: 6.5in;
          height: 6in;
        }
        .portrait-caption
        {
          object-fit: cover;
          width: 100%;
          height: 100%;
          max-width: 6.5in;
          max-height: 6in;
        }
    </style>
  </head>
  <body>
    <center>
       <% if book.cover_image.present? %>
          <h3>Cover_Image</h3>
          <div class="image-cover-div">
            <%= image_tag(book.cover_image, :class => 'square-fit' ) %>
            <!-- <div style='background-image: url(<%#= book.cover_image.service_url %>); width: 500px; height: 500px; background-size:cover; background-position: center ; '> -->
            <!-- </div><br><br> -->
          </div><br><br>
        <%end%>

      <% if book.present? %>
        <% if book&.images.present? %>
          <% book&.images.order(:index).each do |image| %> 
            <% if image.image_type.present? %>
              <% case image.image_type %>
                <% when  "landscapeFull" %>
                    <div class="page">
                      <%#= image_tag(image, :class => 'landscape-full' ) %>
                      <%= image_tag "#{@order.test(image)}", class: "landscape-full" %>
                    </div><br><br>
           
                  <% when "squareFull" %>
                    <div class="page">
                      <%#= image_tag(image, :class => 'square-full' ) %>
                      <%#= image_tag "data:image/jpeg\;base64\,\ #{Base64.encode64(AccountBlock::DocxDownloadService.new(image).doc)}", class: "square-Full" %>
                      <%= image_tag "#{@order.test(image)}", class: "square-Full" %>
                    </div><br><br>

                  <% when "squareSmartScale" %>
                    <div class='page'>
                      <div class="ss-div">
                        <%#= image_tag(image, :class => 'square-smartscale') %>
                        <%= image_tag "#{@order.test(image)}", class: "square-smartscale" %>
                      </div>
                    </div><br><br>
                   
                  <% when "squareFit" %>
                    <div class='page'>
                      <%#= image_tag(image, :class => 'square-fit') %>
                      <%= image_tag "#{@order.test(image)}", class: "square-fit" %>
                    </div><br><br>

                  <% when "caption" %>
                    <div class='page-caption'>
                      <div class="sc-div">
                        <%#= image_tag(image, :class => 'square-caption') %>
                        <%= image_tag "#{@order.test(image)}", class: "square-caption" %>
                      </div>
                      <div>
                        <center>
                          <p><%= image.image_caption %></p>
                        </center>
                      </div>
                    </div><br><br>

              
                  <% when  "landscapeFull" %>
                    <div class="page">
                      <%#= image_tag(image, :class => 'landscape-full' ) %>
                      <%= image_tag "#{@order.test(image)}", class: "landscape-full" %>
                    </div><br><br>

                  <% when "landscapeF1" %> 
                    <div class='page'>
                      <div class="ls-fit-div">
                        <%#= image_tag(image, :class => 'landscape-fit-one' ) %>
                        <%= image_tag "#{@order.test(image)}", class: "landscape-fit-one" %>
                      </div>
                    </div><br><br>
              
                  <% when "landscapeF2" %> 
                    <div class='page'>
                       <%#= image_tag(image, :class => 'landscape-fit-two' ) %>
                       <%= image_tag "#{@order.test(image)}", class: "landscape-fit-two" %>
                    </div><br><br>

                  <% when "landscapeCaption" %>
                    <div class="page-caption">
                      <%#= image_tag(image, :class => 'landscape-fit-two' ) %>
                      <%= image_tag "#{@order.test(image)}", class: "landscape-fit-two" %>
                      <div>
                        <center>
                          <p><%= image.image_caption %></p>
                        </center>
                      </div>
                    </div><br><br>

                  <% when "potraitFull" %>
                    <div class="page">
                      <%#= image_tag(image, :class => 'portrait-full' ) %>
                      <%= image_tag "#{@order.test(image)}", class: "portrait-full" %>
                    </div><br><br>
              

                  <% when "potraitSmartScale" %>
                    <div class="page">
                      <div class="ps-div">
                        <%#= image_tag(image, :class => 'portrait-smartscale' ) %>
                        <%= image_tag "#{@order.test(image)}", class: "portrait-smartscale" %>
                      </div>
                    </div><br><br>

                  <% when "potraitF1"%>
                    <div class="page">
                      <%#= image_tag(image, :class => 'portrait-fit' ) %>
                      <%= image_tag "#{@order.test(image)}", class: "portrait-fit" %>
                    </div><br><br>

                  <% end %>
                <% else %>
                  <div class="page">
                     <%#= image_tag(image, :class => 'square-full' ) %>
                     <%#= image_tag "data:image/jpeg\;base64\,\ #{Base64.encode64(AccountBlock::DocxDownloadService.new(image).doc)}" %>
                      <%= image_tag "#{@order.test(image)}", class: "square-fit" %>
                   </div><br><br>
                <%end %>
              <% end %>
            <% end %>
          <% end %>
          </center>
      
            <% if @order.gift_note.present? %>
                <center>Gift_Note: <%= @order.gift_note%></center>
            <%end%>

            <% if book.book_title.present? %>
                <center>Book_Title: <%= book.book_title%></center>
            <%end%>

            <% if book.spine_title.present? %>
                <center>Spine_Title: <%= book.spine_title%></center>
            <%end%>

            <% if book.book_color.present? %>
                <center>Book_Color: <%= book.book_color%></center>
            <%end%>

            <% if book.logo_color.present? %>
                <center>Logo_Color: <%= book.logo_color%></center>
            <%end%>

            <% if book.title_color.present? %>
                <center>Title_Color: <%= book.title_color%></center>
            <%end%>
  </body>
</html>
